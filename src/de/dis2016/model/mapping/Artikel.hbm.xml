<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.dis2016.model.Artikel" table="artikel">
		<id name="name" type="string" column="name" />
		<property name="preis" type="double" column="preis" />
		<property name="gruppe" type="string" column="gruppe" />
		<property name="familie" type="string" column="familie" />
		<property name="kategorie" type="string" column="kategorie" />
	</class>
</hibernate-mapping>